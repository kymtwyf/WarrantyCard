  body
  #header
    .navbar-wrapper
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
            span.sr-only Toggle Navgation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand= locale.app_name
        #navbar-collapse.navbar-collapse.collapse
            ul.nav.nav-pills
              li.active              
                a(href='#')= locale.tags.Header_Home
                  span.glyphicon.glyphicon-home
              if user
                li
