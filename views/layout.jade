              ul.nav.navbar-nav.navbar-right
                li
                  a(href='#myprofile')= locale.tags.Header_MyProfile   
                    span.glyphicon.glyphicon-user
                li
                  a(href='/logout')= locale.tags.Header_logout
                    span.glyphicon.glyphicon-off
            else
              ul.nav.navbar-nav.navbar-right(style='margin-top:5px;margin-bottom:10px')
                if currentUrl != '/register'
                  li
                    form(action='/register',method='get')
                      button.btn.btn-primary.form-control(type='submit')= locale.tags.Header_Register
                li
                  form(action='/login',method='get')
                    button.btn.btn-success.form-control(type='submit',style='margin-left:20px')= locale.tags.Header_Signin


